        android:layout_height="wrap_content"
        android:text="Prenom: "
        android:textColor="@color/Blan"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0670"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.770" />

    <EditText
        android:id="@+id/prenom"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:hint="Prenom"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:textColorHint="@color/Blan"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.664"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.780" />

    <TextView
        android:id="@+id/telephon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
